<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="30dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintWidth_percent="0.90"
    app:layout_constraintHeight_percent="0.11"
    android:background="@drawable/rounded_popup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tag_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:padding="5dp"
            android:text="Create a new tag"
            android:textSize="15sp"
            android:textStyle="bold" />


        <FrameLayout
            android:id="@+id/tag_input_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tag_editable_input_field"
                android:layout_width="262dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:counterEnabled="true"
                app:counterMaxLength="15">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tag_editable_input"
                    android:inputType="textCapSentences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type a new tag name" />
            </com.google.android.material.textfield.TextInputLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:background="@drawable/filter_border">
            <TextView
                android:id="@+id/selected_filtering_tag_field"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:ellipsize="marquee"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:text="All"/>
            <Spinner
                android:id="@+id/tag_filter_field"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:dropDownSelector="@drawable/spinner_bg"
                android:popupBackground="@drawable/spinner_bg"
                android:spinnerMode="dropdown" />
        </LinearLayout>


        <Button
            android:id="@+id/create_new_tag_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/green"
            android:text="Create"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/apply_new_tag_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/green"
            android:text="Apply"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tags_fragment_body_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5dp"
            android:text="Existing tags"
            android:textSize="15sp"
            android:textStyle="bold" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tags_recycler_view"
            android:layout_width="316dp"
            android:layout_height="149dp"
            android:layout_gravity="center"
            android:background="@drawable/filter_border"
            android:outlineAmbientShadowColor="@color/black" />

        <ListView
            android:id="@+id/selected_item_list"
            android:layout_width="316dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/done_create_button"
            app:layout_constraintTop_toBottomOf="@+id/tags_fragment_body_title" />

        <Button
            android:id="@+id/done_create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:backgroundTint="#39B8FF"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>