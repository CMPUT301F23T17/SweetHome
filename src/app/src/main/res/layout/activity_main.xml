<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/app_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line1"
        android:background="@color/dark_grey"
        app:layout_constraintBottom_toTopOf="@+id/search_add_container"
        app:layout_constraintTop_toBottomOf="@+id/app_header">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:id="@+id/search_add_container"
        app:layout_constraintTop_toBottomOf="@id/line1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/search_bg">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/search_icon"
                android:contentDescription="camera icon"
                android:clickable="true" />
            <EditText
                android:id="@+id/search_input"
                android:layout_width="0dp"
                android:paddingHorizontal="10dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="17sp"
                android:hint="@string/search_hint"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="@string/add_item"
            android:paddingVertical="7dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textAllCaps="false"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sort_filter_container"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/search_add_container">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:paddingStart="6dp"
            android:background="@drawable/filter_border">
            <Spinner
                android:id="@+id/spinner_sort_options"
                android:layout_width="110dp"
                android:layout_height="34dp"
                android:dropDownSelector="@drawable/spinner_bg"
                android:popupBackground="@drawable/spinner_bg"
                android:spinnerMode="dropdown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_add_container" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">
        </View>

        <ImageView
            android:id="@+id/filter_button"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/filter_icon"
            app:tint="@color/black"
            android:clickable="true"
            android:contentDescription="filter icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filter_panel"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/sort_filter_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/calendar_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/filter_border">
                    <ImageView
                        android:id="@+id/calendar_button"
                        android:clickable="true"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/calendar_icon"
                        android:layout_gravity="center"
                        android:contentDescription="calendar icon" />
                    <TextView
                        android:id="@+id/calendar_data"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="7dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="5dp">
                <TextView
                    android:id="@+id/keyword_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Keyword"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/filter_border">
                    <ImageView
                        android:clickable="true"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/search_icon"
                        android:layout_gravity="center"
                        android:contentDescription="search icon" />
                    <EditText
                        android:id="@+id/keyword_field"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:autoSizeMinTextSize="8sp"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="5dp">
                <TextView
                    android:id="@+id/make_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Make"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/filter_border">
                    <ImageView
                        android:clickable="true"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/make_icon"
                        android:layout_gravity="center"
                        android:contentDescription="search icon" />
                    <EditText
                        android:id="@+id/make_field"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLength="20"
                        android:padding="5dp"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tags_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tag"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/filter_border">
                    <TextView
                        android:id="@+id/selected_filtering_tag_field"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:ellipsize="marquee"
                        android:maxLines="1"
                        android:paddingTop="3dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:text="All"/>
                    <Spinner
                        android:id="@+id/tag_filter_field"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:dropDownSelector="@drawable/spinner_bg"
                        android:popupBackground="@drawable/spinner_bg"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/clear_date_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:paddingVertical="7dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="Clear date"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/light_grey"/>
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/apply_filter_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:paddingVertical="7dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="@string/apply_filter"
                    android:textAllCaps="false"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/items_count_frame"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="13dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/filter_panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/items_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 items."
            android:textSize="19sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/no_items_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No items found"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/items_count_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line2"/>

    <ListView
        android:id="@+id/item_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="60dp"
        app:layout_constraintBottom_toTopOf="@id/line2"
        app:layout_constraintTop_toBottomOf="@+id/items_count_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line2"
        android:background="@color/dark_grey"
        app:layout_constraintTop_toTopOf="@+id/total_estimated_value_footer">
    </View>

    <TextView
        android:id="@+id/total_estimated_value_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/total"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/tag_action_on_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/modify_icon"
        app:tint="@android:color/white"
        android:foregroundGravity="center"
        android:foregroundTintMode="src_atop"
        app:backgroundTint="@color/dark_green"
        app:layout_constraintBottom_toTopOf="@+id/delete_action_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/action_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/delete_action_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:background="@drawable/rounded_popup"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/create_tag_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#39B8FF"
                android:text="@string/create_tag"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/add_tag_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#249A85"
                android:text="@string/add_tag"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/tag_action_off_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/modify_icon"
            app:tint="@android:color/white"
            android:foregroundGravity="center"
            android:foregroundTintMode="src_atop"
            app:backgroundTint="@color/dark_green" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:src="@drawable/delete_icon"
        app:tint="@android:color/white"
        android:foregroundGravity="center"
        android:foregroundTintMode="src_atop"
        app:backgroundTint="#BC0416"
        app:layout_constraintBottom_toTopOf="@+id/line2"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/create_tag_fragment"
        android:name="com.example.sweethome.CreateTagFragment"
        android:layout_width="333dp"
        android:layout_height="538dp"
        android:tag="container_tag"
        android:background="@drawable/rounded_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>