<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_green"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/nav_back_icon"
                android:contentDescription="go back button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/back_icon"
                android:padding="8dp"
                android:clickable="true"
                app:tint="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/screen_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="screen name"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/inika_bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/barcode_scan_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/barcode_scan_icon"
                android:contentDescription="scan barcode button"
                android:clickable="true"
                app:tint="@color/white"
                />

            <ImageView
                android:id="@+id/check_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/check_icon"
                android:clickable="true"
                app:tint="@color/white"
                android:layout_alignParentEnd="true"
                android:contentDescription="save button"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>